

<div class="news-body">
  {{#each articles}}
    <div class="row">
      <div class="col-sm-12 article-box">
        <div><img class="articleimg" src="{{this.img}}"></div>
        <div class="article-title"><a href="{{this.link}}" target="_blank">{{this.title}}</a></div>
        <div class="article">{{this.summary}}</div>
        <!-- click to display article comments -->
        <button class="btn view-comments" data-id="{{this.title}}" type="submit"><i class="fa fa-comments-o" aria-hidden="true"></i></button>
      </div>
      <!-- comment section - hidden by default button above toggles -->
      <div class="container comment-section">
        <!-- existing comments -->
        <div class="row container-fluid panel-body">
          <h4>Comments</h4>
            <!-- comments from db will display here -->
            <button class="btn deletebtn"  type="submit">X</button>
        </div>
        <!-- comment input/submit -->
        <div class="row container-fluid panel-body">
          <form class="create-update-form">
            <div class="form-group">
              <input type="text" class="comment-box" name="name" placeholder="Share your thoughts here" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Share your thoughts here'"/>
            </div>
            <button class="btn submitbtn" data-id="{{this.title}}" type="submit">Post</button>
          </form>
        </div>

      </div>
    </div>
  {{/each}}
<!-- end news body -->
</div>



